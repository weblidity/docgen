{
  "debug": false,
  "verbose": false,
  "silent": false,
  "init": {
    "yes": false,
    "force": false
  },
  "build": {
    "output": "dist",
    "watch": false,
    "patterns": ["**/*.products.json", "__products__/**/*.json"],
    "ignore": [
      "**/node_modules/**",
      "**/.git/**",
      "**/build/**",
      "**/dist/**",
      "**/out/**",
      "**/.vscode/**",
      "**/temp/**",
      "**/tmp/**",
      "**/coverage/**",
      "**/package-lock.json"
    ]
  }
}